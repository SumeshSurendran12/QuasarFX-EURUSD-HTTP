{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string",
      "defaultValue": "qufxeurusd",
      "metadata": { "description": "Short, lowercase prefix for resource names." }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": { "description": "Azure region (e.g., eastus, eastus2)." }
    },
    "containerImage": {
      "type": "string",
      "metadata": { "description": "<yourACR>.azurecr.io/quasarfx-eurusd-http:live" }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 1
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 3
    },
    "cpu": {
      "type": "string",
      "defaultValue": "0.5",
      "metadata": { "description": "vCPU per replica as string; converted with float() in the template." }
    },
    "memory": {
      "type": "string",
      "defaultValue": "1Gi",
      "metadata": { "description": "Memory per replica (e.g., 0.5Gi, 1Gi, 2Gi)." }
    },
    "fxUsername": { "type": "securestring" },
    "fxPassword": { "type": "securestring" },
    "fxAppKey":   { "type": "securestring" }
  },
  "variables": {
    "lawName": "[format('{0}-log', parameters('namePrefix'))]",
    "envName": "[format('{0}-env', parameters('namePrefix'))]",
    "acrName": "[format('{0}acr', parameters('namePrefix'))]",
    "appName": "[format('{0}-app', parameters('namePrefix'))]",
    "acrRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions','7f951dda-4ed3-4680-a7ca-43fe172d538d')]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2020-08-01",
      "name": "[variables('lawName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": { "name": "PerGB2018" },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('envName')]",
      "location": "[parameters('location')]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('lawName')), '2020-08-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('lawName')), '2020-08-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('lawName'))]"
      ]
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2019-05-01",
      "name": "[variables('acrName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Basic" },
      "properties": { "adminUserEnabled": false }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('appName')]",
      "location": "[parameters('location')]",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('envName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "auto",
            "allowInsecure": false
          },
          "secrets": [
            { "name": "fx-username", "value": "[parameters('fxUsername')]" },
            { "name": "fx-password", "value": "[parameters('fxPassword')]" },
            { "name": "fx-appkey",   "value": "[parameters('fxAppKey')]" }
          ],
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2019-05-01').loginServer]",
              "identity": "system"
            }
          ]
        },
        "template": {
          "revisionSuffix": "v1",
          "containers": [
            {
              "name": "eurusd-http",
              "image": "[parameters('containerImage')]",
              "resources": {
                "cpu": "[float(parameters('cpu'))]",
                "memory": "[parameters('memory')]"
              },
              "probes": [
                {
                  "type": "Liveness",
                  "httpGet": { "path": "/healthz", "port": 80 },
                  "initialDelaySeconds": 10,
                  "periodSeconds": 10,
                  "timeoutSeconds": 3,
                  "failureThreshold": 3,
                  "successThreshold": 1
                },
                {
                  "type": "Readiness",
                  "httpGet": { "path": "/readyz", "port": 80 },
                  "initialDelaySeconds": 15,
                  "periodSeconds": 15,
                  "timeoutSeconds": 5,
                  "failureThreshold": 3,
                  "successThreshold": 1
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]",
            "rules": [
              {
                "name": "cpu-scale",
                "custom": {
                  "type": "cpu",
                  "metadata": {
                    "type": "Utilization",
                    "value": "70",
                    "containerName": "eurusd-http"
                  }
                }
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('envName'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', variables('acrName'))]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(variables('acrName'), variables('appName'), 'acrpull-http')]",
      "scope": "[resourceId('Microsoft.ContainerRegistry/registries', variables('acrName'))]",
      "properties": {
        "roleDefinitionId": "[variables('acrRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.App/containerApps', variables('appName')), '2023-05-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/containerApps', variables('appName'))]"
      ]
    }
  ],
  "outputs": {
    "containerAppName": {
      "type": "string",
      "value": "[variables('appName')]"
    },
    "acrLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2019-05-01').loginServer]"
    }
  }
}
